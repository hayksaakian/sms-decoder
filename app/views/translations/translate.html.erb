<h3>You can also send a text message to (206) 455-7104</h3>
<div class='row-fluid'>
<div class='span12'>
<%= form_tag({:method => 'post'}, {:class => 'form-horizontal'}) do %>
  <div class="control-group">
    <%= label_tag :message, 'SMS to Decode:', :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :message, params[:message], :class => 'text_field input-large', :placeholder => 'c u l8r' %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag 'Translate', :class => 'btn btn-primary btn-block' %>
  </div>
<% end %>
</div>
</div>
<div class='row-fluid'>
	<% if @bad == false %>
		<%= '---> '+@result %>
	<% elsif @bad == true %>
		<img class='span4' src="http://fc04.deviantart.net/fs70/f/2010/158/b/f/Sonic_Sez_That__s_No_Good_by_jared811111.jpg">
	<% end %>
</div>