<h1>
	<%=
		if @bad == false
			@result
		elsif @bad == true
			'No good translation'
		else
			'Type some text speak below'
		end
	%>
</h1>
<%= form_tag({:method => 'post'}, {:class => 'form-horizontal'}) do %>
  <div class="control-group">
    <%= label_tag :message, 'SMS to Decode', :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :message, params[:message], :class => 'text_field', :placeholder => 'idk my bff jill?' %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Translate', :class => 'btn btn-primary btn-block' %>
  </div>
<% end %>